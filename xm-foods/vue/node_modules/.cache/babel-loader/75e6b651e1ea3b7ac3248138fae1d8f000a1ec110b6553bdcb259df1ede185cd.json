{"ast":null,"code":"import \"core-js/modules/es.array.push.js\";\nexport default {\n  name: \"FrontLayout\",\n  data() {\n    return {\n      top: '',\n      notice: [],\n      user: JSON.parse(localStorage.getItem(\"xm-user\") || '{}'),\n      menus: [{\n        text: '首页',\n        path: '/front/home'\n      }, {\n        text: '菜谱',\n        path: '/front/foods'\n      }, {\n        text: '笔记',\n        path: '/front/notebook'\n      }, {\n        text: '商城',\n        path: '/front/mall'\n      }]\n    };\n  },\n  mounted() {\n    this.loadNotice();\n  },\n  methods: {\n    changePath(path) {\n      location.href = path;\n    },\n    loadNotice() {\n      this.$request.get('/notice/selectAll').then(res => {\n        this.notice = res.data;\n        let i = 0;\n        if (this.notice && this.notice.length) {\n          this.top = this.notice[0].content;\n          setInterval(() => {\n            this.top = this.notice[i].content;\n            i++;\n            if (i === this.notice.length) {\n              i = 0;\n            }\n          }, 2500);\n        }\n      });\n    },\n    updateUser() {\n      this.user = JSON.parse(localStorage.getItem('xm-user') || '{}'); // 重新获取下用户的最新信息\n    },\n    // 退出登录\n    logout() {\n      localStorage.removeItem(\"xm-user\");\n      this.$router.push(\"/login\");\n    }\n  }\n};","map":{"version":3,"names":["name","data","top","notice","user","JSON","parse","localStorage","getItem","menus","text","path","mounted","loadNotice","methods","changePath","location","href","$request","get","then","res","i","length","content","setInterval","updateUser","logout","removeItem","$router","push"],"sources":["src/views/Front.vue"],"sourcesContent":["<template>\r\n  <div>\r\n    <div class=\"front-notice\"><i class=\"el-icon-bell\" style=\"margin-right: 2px\"></i>公告：{{ top }}</div>\r\n    <!--头部-->\r\n    <div style=\"box-shadow: 0 2px 4px rgba(0,0,0,.08)\">\r\n      <div class=\"front-header\">\r\n        <div class=\"front-header-left\">\r\n          <img src=\"@/assets/imgs/logo.png\" alt=\"\">\r\n          <div class=\"title\">美食分享网</div>\r\n        </div>\r\n        <div class=\"front-header-center\">\r\n          <div @click=\"changePath('/front/home')\" class=\"menu-item\" v-for=\"item in menus\" :key=\"item.text\" :class=\"{'menu-item-active' : item.path === $route.path }\">{{ item.text }}</div>\r\n\r\n          <div>\r\n            <el-input style=\"width: 200px; margin-right: 10px; margin-left: 100px\" placeholder=\"请输入菜谱名称\"></el-input>\r\n            <el-button style=\"background-color: #f59300; border-color: #f59300; color: #fff\">搜索</el-button>\r\n          </div>\r\n        </div>\r\n        <div class=\"front-header-right\">\r\n          <div v-if=\"!user.username\">\r\n            <el-button @click=\"$router.push('/login')\">登录</el-button>\r\n            <el-button @click=\"$router.push('/register')\">注册</el-button>\r\n          </div>\r\n          <div v-else>\r\n            <el-dropdown>\r\n              <div class=\"front-header-dropdown\">\r\n                <img :src=\"user.avatar\" alt=\"\">\r\n                <div style=\"margin-left: 10px\">\r\n                  <span>{{ user.name }}</span><i class=\"el-icon-arrow-down\" style=\"margin-left: 5px\"></i>\r\n                </div>\r\n              </div>\r\n              <el-dropdown-menu slot=\"dropdown\">\r\n                <el-dropdown-item>\r\n                  <a style=\"color: #333\" href=\"/front/person\"><div>个人中心</div></a>\r\n                </el-dropdown-item>\r\n                <el-dropdown-item>\r\n                  <div @click=\"logout\">退出</div>\r\n                </el-dropdown-item>\r\n              </el-dropdown-menu>\r\n            </el-dropdown>\r\n          </div>\r\n        </div>\r\n      </div>\r\n    </div>\r\n    <!--主体-->\r\n    <div class=\"main-body\">\r\n      <router-view ref=\"child\" @update:user=\"updateUser\" />\r\n    </div>\r\n  </div>\r\n\r\n</template>\r\n\r\n<script>\r\n\r\nexport default {\r\n  name: \"FrontLayout\",\r\n\r\n  data () {\r\n    return {\r\n      top: '',\r\n      notice: [],\r\n      user: JSON.parse(localStorage.getItem(\"xm-user\") || '{}'),\r\n      menus: [\r\n        { text: '首页', path: '/front/home' },\r\n        { text: '菜谱', path: '/front/foods' },\r\n        { text: '笔记', path: '/front/notebook' },\r\n        { text: '商城', path: '/front/mall' },\r\n      ]\r\n    }\r\n  },\r\n\r\n  mounted() {\r\n    this.loadNotice()\r\n  },\r\n  methods: {\r\n    changePath(path) {\r\n      location.href = path\r\n    },\r\n    loadNotice() {\r\n      this.$request.get('/notice/selectAll').then(res => {\r\n        this.notice = res.data\r\n        let i = 0\r\n        if (this.notice && this.notice.length) {\r\n          this.top = this.notice[0].content\r\n          setInterval(() => {\r\n            this.top = this.notice[i].content\r\n            i++\r\n            if (i === this.notice.length) {\r\n              i = 0\r\n            }\r\n          }, 2500)\r\n        }\r\n      })\r\n    },\r\n    updateUser() {\r\n      this.user = JSON.parse(localStorage.getItem('xm-user') || '{}')   // 重新获取下用户的最新信息\r\n    },\r\n    // 退出登录\r\n    logout() {\r\n      localStorage.removeItem(\"xm-user\");\r\n      this.$router.push(\"/login\");\r\n    },\r\n  }\r\n\r\n}\r\n</script>\r\n\r\n<style scoped>\r\n@import \"@/assets/css/front.css\";\r\n\r\n.menu-item {\r\n  height: 50%;\r\n  display: flex;\r\n  align-items: center;\r\n  margin-right: 30px;\r\n  font-size: 16px;\r\n  cursor: pointer;\r\n}\r\n.menu-item:hover {\r\n  color: #FFB31A;\r\n  font-weight: bold;\r\n}\r\n.menu-item-active {\r\n  color: #FFB31A;\r\n  font-weight: bold;\r\n  border-bottom: 3px solid #FFB31A;\r\n}\r\n</style>"],"mappings":";AAsDA;EACAA,IAAA;EAEAC,KAAA;IACA;MACAC,GAAA;MACAC,MAAA;MACAC,IAAA,EAAAC,IAAA,CAAAC,KAAA,CAAAC,YAAA,CAAAC,OAAA;MACAC,KAAA,GACA;QAAAC,IAAA;QAAAC,IAAA;MAAA,GACA;QAAAD,IAAA;QAAAC,IAAA;MAAA,GACA;QAAAD,IAAA;QAAAC,IAAA;MAAA,GACA;QAAAD,IAAA;QAAAC,IAAA;MAAA;IAEA